<Window x:Class="ImageMetaInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageMetaInfo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Name="myGrid">

        <Image Name="image" Height ="150" Width="200"/>
        <Button x:Name="changeButton"  Content="Change Image" HorizontalAlignment="Center" Margin="0,272,0,0" VerticalAlignment="Top" Width="95" Click="clickedChange"/>
        <TextBlock x:Name="metaText" HorizontalAlignment="Left" Margin="22,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="200" Width="132"/>

    </Grid>
</Window>
